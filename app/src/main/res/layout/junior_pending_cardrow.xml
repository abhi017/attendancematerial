<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.sourcey.MyAttendence.Juniors">


    <android.support.v7.widget.CardView
        card_view:elevation="4dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/header"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:minHeight="80dp"
                android:id="@+id/rlAddress"
                android:layout_alignParentTop="true"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:text="dshfhjcbkuhjuoiiokjujkoltyuioyuiolpyujikloyhjklbvnmhjkljm,l.;nfdfbdfbhjdfudhgdhgkudr" />



            </RelativeLayout>

            <View
                android:layout_below="@+id/rlAddress"
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#E1E1E1"
                />

            <LinearLayout
                android:id="@+id/rlPickLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:padding="@dimen/items_inbetween"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/appr"
                    android:layout_weight="1">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/approve"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/items_inbetween"
                        android:text="View Attendance"
                        android:textColor="@color/primary" />

                </LinearLayout>
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:padding="@dimen/items_inbetween"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/reject"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/items_inbetween"
                        android:text="Reject"
                        android:textColor="@color/primary" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
